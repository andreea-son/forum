@model Forum.UI.Models.Category

<div class="container">
    <h1 class="text-center">Add category</h1>
    <div class="row">
        <div class="mx-auto w-50">
            <form id="createCategory" asp-controller="Categories" asp-action="AddCategory" method="post">
                <div class="mx-auto">
                        <div class="form-group">
                            <label asp-for="Name" class="control-label">Name</label>
                            <input asp-for="Name" class="form-control bg-light" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Description" class="control-label">Description</label>
                            <textarea asp-for="Description" class="form-control bg-light" style="height:300px;"></textarea>
                        </div>
                        <br />
                        <div class="text-left">
                            <button class="btn btn-primary" type="submit">Add</button>
                        </div>
                    </div>
                @if (!ViewData.ModelState.IsValid)
                {
                    if (ViewData.ModelState[string.Empty] != null)
                    {
                        <div class="error-summary">
                            @foreach (var error in ViewData.ModelState[string.Empty].Errors)
                            {
                                <div class="error-item text-danger">
                                    @error.ErrorMessage
                                </div>
                            }
                        </div>
                    }
                }
            </form>
        </div>
    </div>
</div>