@using Forum.UI.Controllers
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/bootstrapCustom.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="SHORTCUT ICON" href="~/images/favicon.ico" />
    <link rel="stylesheet" href="~/Forum.styles.css" asp-append-version="true" />

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@200&display=swap" rel="stylesheet">
    <script src="https://kit.fontawesome.com/ee8fda1a40.js" crossorigin="anonymous"></script>
</head>
<body class="bg-secondary">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-secondary box-shadow text-light">
            <div class="container-fluid">
                <a class="navbar-brand p-0 m-0" asp-area="" asp-controller="Home" asp-action="Index"><img style="width: auto; height: 50px;" src="/images/logo.png" alt="logo" /></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 col-sm-5">
                        @if (HomeController.LoggedUser != null)
                        {
                            @if (HomeController.LoggedUser.UserType == Forum.UserTypes.Admin)
                            {
                                <partial name="_AdminMenuPartial" />
                            }
                        }
                        <partial name="_LoginMenuPartial" />
                    </ul>
                </div>
                <partial name="SearchPartial" />
            </div>
        </nav>
    </header>
    <main role="main" class="pb-3 text-light">
        @RenderBody()
    </main>

    <footer class="footer text-muted">
        <div class="container style-container">
            &copy; 2022 - MovieGeek
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
